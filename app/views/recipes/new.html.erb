<% provide(:title, 'New Recipe') %>
<h1>New Recipe</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@recipe) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>
	  
	  <%= f.label :blog %>
      <%= f.text_area :blog %>
	  
	  <%= f.label :serves %>
      <%= f.text_field :serves %>

      <%= f.submit "Create new recipe", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>