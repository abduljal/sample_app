<% provide(:title, @recipe.name) %>
<h3><%= @recipe.name.upcase %></h3>
<p><b> Serves : </b><%= @recipe.serves %>   </p>
<p class="right"><%= link_to "Edit",edit_recipe_home_path+"/"+@recipe.id.to_s %></p>


<div class="left">
	<h4>Listing Ingredients</h4>
	<table>
		<tr>
			<th>Ingredient</th>
			<th>Amount</th>
		</tr>
		<% @ingredients.each do |ingredient| %>
		<tr>
			<td><%= ingredient.name %></td>
			<td><%= ingredient.amount %></td>
		</tr>
	<% end %>
	</table>
	<br/>
	<br/>
	
	<h4>Listing Steps</h4>
	<table>
		<tr>
			<th>Step </th>
			<th>Process</th>
		</tr>
		<% @steps.each do |step| %>
		<tr>
			<td><%= step.order %></td>
			<td><%= step.process %></td>
		</tr>
	<% end %>
	</table>
</div>